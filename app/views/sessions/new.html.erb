<% provide(:title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(url: sessions_path, local: true, data: { turbo: false }) do |form| %>
      <div class="field">
        <%= form.label :email, "Email" %>
        <%= form.email_field :email, name: "session[email]", class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :password, "Password" %>
        <%= form.password_field :password, name: "session[password]", class: "form-control" %>
      </div>

      <div class="field">
        <%= form.label :remember_me, class: "checkbox inline" do %>
          <%= form.check_box :remember_me, name: "session[remember_me]", checked: true %>
          <span>Remember me on this computer</span>
        <% end %>
      </div>

      <div class="actions">
        <%= form.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", signup_path %></p>
  </div>
</div>
